<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Sale off:</strong>
  <%= @product.sale_off %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Is service:</strong>
  <%= @product.is_service %>
</p>

<p>
  <strong>Product active:</strong>
  <%= @product.product_active %>
</p>
<div class="col-md-3 col-lg-3 ">
    <div class="card" data-no-turbolink="">
        <div class="thumbnail">
            <% @product.product_photos.each do |p| %>
              <%= image_tag p.photo.url, style: "max-width: 200px; max-height: 200px" %>
              <%= link_to "Destroy", product_photo_path(p), method: :delete %>
            <% end %>
        </div>
    </div>
</div>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
